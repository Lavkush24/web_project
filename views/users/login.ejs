<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
    <h2 class="col-6 offset-3">Login to your Account</h2>
    <div class="col-6 offset-3">
        <form action="/user/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label"><b>Username  </b></label>
                <input 
                    type="text"
                    id="Username"
                    name="username" 
                    class="form-control"
                    required>
            </div>
            
            <div class="mb-3">
                <label for="password" class="form-label"><b>Enter Password </b></label>
                <input 
                    type="password"
                    id="password"
                    name="password" 
                    class="form-control"
                    required>
            </div>
            <button class="btn btn-success" >Login</button>
        </form>
    </div>
</div>